{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "mfe-common",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss",
      "standalone": true,
      "changeDetection": "OnPush"
    }
  },
  "sourceRoot": "apps/mfe-common/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@nx/angular:module-federation",
      "options": {
        "outputPath": "dist/mfe-common",
        "index": "apps/mfe-common/src/index.html",
        "main": "apps/mfe-common/src/main.ts",
        "tsConfig": "apps/mfe-common/tsconfig.app.json",
        "assets": [
          "apps/mfe-common/src/favicon.ico",
          "apps/mfe-common/src/assets"
        ],
        "styles": [
          "apps/mfe-common/src/styles.scss"
        ],
        "moduleFederationConfig": {
          "name": "mfeCommon",
          "exposes": {
            "./DataTable": "./src/app/shared/components/ui/data-table/data-table.component.ts",
            "./TileCard": "./src/app/shared/components/ui/tile-card/tile-card.component.ts",
            "./Modal": "./src/app/shared/components/ui/modal/modal.component.ts",
            "./CommonComponents": "./src/app/shared/components/index.ts"
          },
          "shared": {
            "@angular/core": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "@angular/common": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "@angular/router": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "rxjs": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" }
          }
        }
      },
      "configurations": {
        "production": {
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4203,
        "publicHost": "http://localhost:4203",
        "buildTarget": "mfe-common:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "mfe-common:build:production"
        },
        "development": {
          "buildTarget": "mfe-common:build:development"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}