{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "mfe-transaction",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss",
      "standalone": true,
      "changeDetection": "OnPush"
    }
  },
  "sourceRoot": "apps/mfe-transaction/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@nx/angular:module-federation",
      "options": {
        "outputPath": "dist/mfe-transaction",
        "index": "apps/mfe-transaction/src/index.html",
        "main": "apps/mfe-transaction/src/main.ts",
        "tsConfig": "apps/mfe-transaction/tsconfig.app.json",
        "polyfills": [
          "zone.js"
        ],
        "assets": [
          "apps/mfe-transaction/src/favicon.ico",
          "apps/mfe-transaction/src/assets"
        ],
        "styles": [
          "apps/mfe-transaction/src/styles.scss"
        ],
        "moduleFederationConfig": {
          "name": "mfeTransaction",
          "remotes": ["shell", "mfe-common"],
          "exposes": {
            "./TransactionList": "./src/app/features/transaction-list/transaction-list.component.ts"
          },
          "shared": {
            "@angular/core": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "@angular/common": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "@angular/router": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" },
            "rxjs": { "singleton": true, "strictVersion": true, "requiredVersion": "auto" }
          }
        }
      },
      "configurations": {
        "production": {
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4202,
        "publicHost": "http://localhost:4202",
        "buildTarget": "mfe-transaction:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "mfe-transaction:build:production"
        },
        "development": {
          "buildTarget": "mfe-transaction:build:development"
        }
      },
      "defaultConfiguration": "development"
    }
  }
}